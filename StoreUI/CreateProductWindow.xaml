<Window x:Class="StoreUI.CreateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreUI"
        mc:Ignorable="d"
        Title="CreateProduct" Height="450" Width="500">
    <ScrollViewer>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="CategoryComboBox" SelectedIndex="0" SelectionChanged="CategoryComboBox_SelectionChanged" Margin="15 10 15 10" Padding="5"></ComboBox>
                <Button Name="SubmitButton" Click="SubmitButton_Click" Margin="15 10 15 10" Padding="5">Submit</Button>
            </StackPanel>
            <StackPanel Name="FormStackPanel"></StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
