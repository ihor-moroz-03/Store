<Window x:Class="StoreUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreUI"
        mc:Ignorable="d"
        Title="Authorization" Height="370" Width="300">
    <StackPanel>
        <Label Margin="15 5 15 0">Username:</Label>
        <TextBox Name="UsernameTextBox" Margin="15 0 15 15" Padding="5">admin</TextBox>
        <Label Margin="15 5 15 0">Password:</Label>
        <PasswordBox Name="PasswordBox" Margin="15 0 15 15" Padding="5" Password="admin"></PasswordBox>
        <ComboBox Name="UserComboBox"  Margin="15 0 15 15" Padding="5" SelectedIndex="1">
            <ComboBoxItem>Customer</ComboBoxItem>
            <ComboBoxItem>Admin</ComboBoxItem>
            <ComboBoxItem>Moderator</ComboBoxItem>
        </ComboBox>
        <Button Name="SignInButton" Margin="15 0 15 15" Padding="5" Click="SignInButton_Click">Sign In</Button>
        <Button Name="SignUpButton" Margin="15 0 15 15" Padding="5" Click="SignUpButton_Click">Sign Up</Button>
        <Separator Margin="15 0 15 15"></Separator>
        <Button Name="GuestSignIn" Margin="15 0 15 15" Padding="5" Click="GuestSignIn_Click">Sign In as Guest</Button>
    </StackPanel>
</Window>
